        android:textSize="@dimen/head_title"
        android:text="@string/sunday" />
    
    <TextView android:id="@+id/display_daily_sunday_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/display_daily_sunday"
        android:paddingBottom="5sp"
        android:paddingRight="5sp"
        android:paddingLeft="5sp"
        android:textSize="@dimen/text"
        android:text="-" />
    
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/display_daily_sunday_text" >
    
	    <Button android:id="@+id/display_daily_prev_button"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"	        
	        android:gravity="center"
	        android:textSize="@dimen/text"
	        android:text="@string/prev"
	        android:visibility="visible"
	        android:onClick="prevWeek" />
	    
	    <Button android:id="@+id/display_restaurant_daily_next_button"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toRightOf="@id/display_daily_prev_button"
	        android:gravity="center"
	        android:textSize="@dimen/text"
	        android:text="@string/next"
	        android:visibility="visible"
	        android:onClick="nextWeek" />
