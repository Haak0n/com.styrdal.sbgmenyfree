        android:paddingBottom="5sp"
        android:paddingLeft="5sp"
        android:gravity="center"
        android:textSize="@dimen/head_title"
        android:text="@string/wednesday" />
    
    <TextView android:id="@+id/display_daily_wednesday_text"
