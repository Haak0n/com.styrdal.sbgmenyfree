        android:paddingBottom="5sp"
        android:paddingLeft="5sp"
        android:gravity="center"
        android:textSize="@dimen/head_title"
        android:text="@string/tuesday" />
    
    <TextView android:id="@+id/display_daily_tuesday_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/display_daily_tuesday"
        android:paddingBottom="5sp"
        android:paddingRight="5sp"
        android:paddingLeft="5sp"
        android:textSize="@dimen/text"
        android:text="-" />

    
    <View style="@style/Divider"
        android:id="@+id/display_daily_divider2"
        android:layout_below="@id/display_daily_tuesday_text"/>
    
    <TextView android:id="@+id/display_daily_wednesday"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
