        android:textSize="@dimen/text"
        android:text="-" />
    
    
    <View style="@style/Divider"
        android:id="@+id/display_daily_divider4"
        android:layout_below="@id/display_daily_thursday_text"/>
    
    <TextView android:id="@+id/display_daily_friday"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/display_daily_divider4"
        android:paddingTop="5sp"
