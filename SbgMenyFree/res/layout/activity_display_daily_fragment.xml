<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Displaydaily" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <com.google.android.gms.ads.AdView android:id="@+id/daily_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6095611948758304/4308520274" />

    <TextView android:id="@+id/display_daily_monday"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/daily_adView"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingLeft="5sp"
        android:gravity="center"
        android:textSize="@dimen/head_title"
        android:text="@string/monday" />
    
    <TextView android:id="@+id/display_daily_monday_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/display_daily_monday"
        android:paddingBottom="5sp"
        android:paddingRight="5sp"
        android:paddingLeft="5sp"
        android:textSize="@dimen/text"
        android:text="-" />
 
    
    <View style="@style/Divider"
        android:id="@+id/display_daily_divider1"
        android:layout_below="@id/display_daily_monday_text"/>
    
    <TextView android:id="@+id/display_daily_tuesday"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/display_daily_divider1"
