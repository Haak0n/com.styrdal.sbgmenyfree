        android:paddingBottom="5sp"
        android:paddingRight="5sp"
        android:paddingLeft="5sp"
        android:textSize="@dimen/text"
        android:text="-" />

    
    <View style="@style/Divider"
        android:id="@+id/display_daily_divider3"
        android:layout_below="@id/display_daily_wednesday_text"/>
    
    <TextView android:id="@+id/display_daily_thursday"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/display_daily_divider3"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingLeft="5sp"
        android:gravity="center"
        android:textSize="@dimen/head_title"
        android:text="@string/thursday" />
    
    <TextView android:id="@+id/display_daily_thursday_text"
